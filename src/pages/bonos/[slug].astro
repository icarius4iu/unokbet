---
import MainLayout from "../../layouts/MainLayout.astro";
import BonusDetail from "../../components/svelte/bonuses/BonusDetail.svelte";
import { bonuses } from "../../data/bonuses";

export async function getStaticPaths() {
    return bonuses.map((bonus) => ({
        params: { slug: bonus.slug },
        props: { bonus },
    }));
}

const { bonus } = Astro.props;
---

<MainLayout title={`${bonus.title} - Caja Fuerte`}>
    <div class="min-h-screen pb-20 pt-24 relative pattern-bg-dark">
        <!-- Overlay Gradient -->
        <div
            class="absolute inset-0 bg-gradient-to-b from-[#13151A]/30 via-[#13151A]/80 to-[#13151A] z-0"
        >
        </div>

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
            <!-- Breadcrumb -->
            <div class="flex items-center gap-2 text-sm text-gray-400 mb-8">
                <a href="/bonos" class="hover:text-white transition-colors"
                    >Bonos</a
                >
                <i class="fas fa-chevron-right text-xs opacity-50"></i>
                <span class="text-primary font-bold">{bonus.slug}</span>
            </div>

            <BonusDetail client:load bonus={bonus} />
        </div>
    </div>
</MainLayout>

<style>
    .pattern-bg-dark {
        background-color: #13151a;
        background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%230CF2F2' fill-opacity='0.15'%3E%3Cpath d='M15 26h30v8H15zM8 20h10v20H8zM42 20h10v20H42z'/%3E%3C/g%3E%3C/svg%3E");
        background-size: 80px 80px;
    }
</style>
